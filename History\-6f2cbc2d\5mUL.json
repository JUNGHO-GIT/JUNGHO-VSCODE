{

  // [1. JAVA] 
  "java.home": "C:\\Program Files\\JAVA\\jdk1.8.0_351",
  "java.configuration.runtimes": [ 
      {
        "name": "JavaSE-1.8",
        "path": "C:\\Program Files\\Java\\jdk1.8.0_351",
        "default": true
      }
  ],
  
  // [2. Terminal]
  "terminal.integrated.gpuAcceleration" : "off",
  "terminal.integrated.defaultProfile.windows": "Command",
  "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\cmd.exe -nologo",
  "terminal.integrated.profiles.windows": {
      "PowerShell" : {
          "source" : "PowerShell",
          "icon": "terminal-powershell"
      },
      "Command Prompt": {
          "path" : [
              "${env:windir}\\Sysnative\\cmd.exe",
              "${env:windir}\\System32\\cmd.exe"
          ],
          "args" : [],
          "icon" : "terminal-cmd"
      },
      "Git Bash": {
          "source": "Git Bash"
      },
      "Command": {
          "path": "C:\\WINDOWS\\System32\\cmd.exe -nologo",
          "args": []
      }
  },
  
  // [3. Debug]
  "debug.console.fontFamily": "D2Coding ligature",
  
  // [3. Workbench]
  "workbench.experimental.settingsProfiles.enabled" : true,
  "workbench.activityBar.visible": false,
  "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {},
  "workbench.startupEditor": "none",
  "workbench.iconTheme" : "material-icon-theme",
  "workbench.editor.untitled.hint" : "hidden",
  "workbench.editorAssociations": {"*.html": "default"},
  "workbench.sash.hoverDelay": 0,
  
  // [4. launch]
  "launch" : {
      "configurations" : [],
      "compounds" : []
  },
  
  // [5. Explorer]
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete" : false,
  
  // [6. Editor]
  "editor.fontFamily": "D2Coding ligature",
  "editor.codeLensFontFamily" : "D2Coding ligature",
  "editor.inlayHints.fontFamily": "D2Coding ligature",
  "editor.rulers": [100],
  "editor.minimap.maxColumn": 100,
  "editor.tabSize" : 2,
  "editor.folding": false,
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  "editor.detectIndentation" : true,
  "editor.fontLigatures": true,
  "editor.linkedEditing" : true,
  "editor.tokenColorCustomizations": 
      {"comments": "#c7dd0c"},
  "editor.hideCursorInOverviewRuler": true,
  "editor.hover.delay": 500,
  
  // [7. Windows]
  "window.autoDetectColorScheme" : true,
  "window.commandCenter": true,
  
  // [8. File]
  "files.autoSave": "afterDelay",
  "files.associations": {
      "*.html" : "html",
      "*.java" : "java",
      "*.xml"  : "xml",
      "*.js"   : "javascript",
      "*.ts"   : "typescript",
      "*.php"  : "php",
      "*.css"  : "css"
  },
  
  // [10. Security]
  "security.workspace.trust.untrustedFiles" : "open",
  
  // [11. Etc]
  "liveServer.settings.donotShowInfoMsg": true,
  
  "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
  },
  
  "cSpell.userWords": [
      "nologo",
      "sidemenu"
  ],
  
  "[html]" : {
      "editor.suggest.insertMode": "replace",
      "editor.defaultFormatter": "SimonSiefke.prettier-vscode"
  },
  
  "auto-close-tag.activationOnLanguage": [
      "xml",
      "php",
      "blade",
      "ejs",
      "jinja",
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "plaintext",
      "markdown",
      "vue",
      "liquid",
      "erb",
      "lang-cfml",
      "cfml",
      "HTML (EEx)",
      "HTML (Eex)",
      "plist"
  ],
    "editor.indentSize": "tabSize",
    "editor.padding.top": 1,
  }